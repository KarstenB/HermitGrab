{
  "cargo/hermit.toml": {
    "patch": [
      {
        "source": "patch.toml",
        "target": "~/.cargo/config.toml",
        "type": "JsonMerge",
        "requires": [
          "+cargo"
        ],
        "order": 10
      }
    ],
    "requires": [
      "+cargo"
    ]
  },
  "hermit.toml": {
    "profiles": {
      "testProfile": [
        "hello",
        "test1"
      ]
    }
  },
  "test1/hermit.toml": {
    "link": [
      {
        "source": "testfile.txt",
        "target": "~/testfile.txt"
      },
      {
        "source": "anotherfile.txt",
        "target": "~/anotherfile.txt",
        "requires": [
          "-another"
        ],
        "fallback": "BackupOverwrite"
      }
    ],
    "requires": [
      "+test1"
    ]
  }
}